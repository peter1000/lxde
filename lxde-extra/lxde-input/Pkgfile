name=lxde-input
_name=lxinput
version=0.3.4
release=1
 
source=(http://downloads.sourceforge.net/lxde/${_name}-$version.tar.xz)
 
build() {
cd ${_name}-$version
./configure --prefix=/usr 	
make
make DESTDIR=$PKG install
}
