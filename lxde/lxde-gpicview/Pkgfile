# Description: Le paquet GPicView contient un visualisateur d'images l√©ger. 
# URL: http://lxde.org/
# Maintainer: Martin Bagge
# Packager: geantbrun at gmail dot com
# Depends on: gtk

name=lxde-gpicview
_name=gpicview
version=0.2.4
release=1
 
source=(http://downloads.sourceforge.net/lxde/${_name}-$version.tar.gz)
 
build() {
cd ${_name}-$version
./configure --prefix=/usr 	
make
make DESTDIR=$PKG install
sed -i 's/Utility;//' $PKG/usr/share/applications/gpicview.desktop  
}
