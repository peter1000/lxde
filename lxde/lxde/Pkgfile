# Depends on: libfm libfm-extra lxde-appearance lxde-common lxde-icon-theme lxde-menu-data lxde-panel lxde-session menu-cache pcmanfm
run=( libfm libfm-extra lxde-appearance lxde-common lxde-icon-theme lxde-menu-data lxde-panel lxde-session menu-cache pcmanfm )
name=lxde
